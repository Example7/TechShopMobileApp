<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TechShopApp.ViewModels.ZamowienieVM"
             xmlns:model="clr-namespace:TechShopApp.ServiceReference"
             x:Class="TechShopApp.Views.ZamowienieView.ZamowienieDetailPage"
             Title="{Binding Title}"
             BackgroundColor="#F8F9FA">

    <ScrollView>
        <StackLayout Padding="20" Spacing="25">

            <Label Text="Szczegóły Zamówienia"
                   FontSize="32"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#2C3E50" />
            <StackLayout Spacing="15">
                <Frame Style="{StaticResource DetailCard}">
                    <StackLayout>
                        <Label Text="Id zamówienia" Style="{StaticResource LabelHeader}" />
                        <Label Text="{Binding ZamowienieId}" Style="{StaticResource LabelValue}" />
                    </StackLayout>
                </Frame>

                <Frame Style="{StaticResource DetailCard}">
                    <StackLayout>
                        <Label Text="Nazwa klienta" Style="{StaticResource LabelHeader}" />
                        <Label Text="{Binding KlientData}" Style="{StaticResource LabelValue}" />
                    </StackLayout>
                </Frame>

                <Frame Style="{StaticResource DetailCard}">
                    <StackLayout>
                        <Label Text="Data zamówienia" Style="{StaticResource LabelHeader}" />
                        <Label Text="{Binding DataZamowienia, StringFormat='{0:yyyy-MM-dd}'}" Style="{StaticResource LabelValue}" />
                    </StackLayout>
                </Frame>

                <Frame Style="{StaticResource DetailCard}">
                    <StackLayout>
                        <Label Text="Status zamówienia" Style="{StaticResource LabelHeader}" />
                        <Label Text="{Binding Status}" Style="{StaticResource LabelValue}" />
                    </StackLayout>
                </Frame>

                <Frame Style="{StaticResource DetailCard}">
                    <StackLayout>
                        <Label Text="Kwota" Style="{StaticResource LabelHeader}" />
                        <Label Text="{Binding Kwota}" Style="{StaticResource LabelValue}" />
                    </StackLayout>
                </Frame>
            </StackLayout>

            <StackLayout Orientation="Horizontal"
                         HorizontalOptions="FillAndExpand"
                         Spacing="10"
                         Margin="0,10">
                <Button Text="Anuluj" Command="{Binding CancelCommand}"
                        BackgroundColor="#E74C3C" TextColor="White" CornerRadius="10"
                        HorizontalOptions="FillAndExpand" />
                <Button Text="Edytuj" Command="{Binding UpdateCommand}"
                        BackgroundColor="#3498DB" TextColor="White" CornerRadius="10"
                        HorizontalOptions="FillAndExpand" />
                <Button Text="Usuń" Command="{Binding DeleteCommand}"
                        BackgroundColor="#F39C12" TextColor="White" CornerRadius="10"
                        HorizontalOptions="FillAndExpand" />
            </StackLayout>

            <Grid BackgroundColor="#123458" Padding="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Frame Grid.Column="0"
                       Padding="10,5"
                       BackgroundColor="#FF2E63"
                       CornerRadius="8"
                       HasShadow="True"
                       HorizontalOptions="End"
                       VerticalOptions="Center">
                    <StackLayout Orientation="Horizontal" Spacing="5">
                        <Image Source="add_icon.png" HeightRequest="20" WidthRequest="20" />
                        <Label Text="Dodaj produkty do zamówienia"
                               TextColor="Black"
                               FontSize="16"
                               VerticalOptions="Center" />
                    </StackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding AddItemCommand}" />
                    </Frame.GestureRecognizers>
                </Frame>
   
            </Grid>

            <CollectionView x:Name="ItemsListView"
                Margin="0,20"
                ItemsSource="{Binding Items}"
                SelectionMode="None"
                VerticalOptions="FillAndExpand">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="10" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:ZamowioneProduktyForView">
                        <Frame CornerRadius="12" Padding="15" BackgroundColor="White" HasShadow="True">
                            <StackLayout Spacing="8">

                                <Grid ColumnSpacing="15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*" />
                                        <ColumnDefinition Width="1.5*" />
                                    </Grid.ColumnDefinitions>

                                    <StackLayout Grid.Column="0" Spacing="2">
                                        <Label Text="Data zamówienia:" FontAttributes="Bold" FontSize="14" TextColor="#333" />
                                        <Label Text="{Binding ZamowienieData, StringFormat='{0:yyyy-MM-dd}'}" FontSize="14" TextColor="#555" />
                                    </StackLayout>
                                </Grid>

                                <StackLayout Spacing="2" Margin="0,10,0,0">
                                    <Label Text="Produkt:" FontAttributes="Bold" FontSize="14" TextColor="#333" />
                                    <Label Text="{Binding ProduktData}" FontSize="14" TextColor="#555" />
                                </StackLayout>

                                <BoxView HeightRequest="1" Color="#ccc" Margin="0,10" />

                                <Grid ColumnSpacing="20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <StackLayout Grid.Column="0" Spacing="2">
                                        <Label Text="Ilość:" FontAttributes="Bold" FontSize="14" TextColor="#333" />
                                        <Label Text="{Binding Ilosc}" FontSize="14" TextColor="#555" />
                                    </StackLayout>

                                    <StackLayout Grid.Column="1" Spacing="2">
                                        <Label Text="Cena jednostkowa:" FontAttributes="Bold" FontSize="14" TextColor="#333" />
                                        <Label Text="{Binding CenaJednostkowa}" FontSize="14" TextColor="#00796B" />
                                    </StackLayout>
                                </Grid>

                                <StackLayout.GestureRecognizers>
                                    <TapGestureRecognizer 
                                        NumberOfTapsRequired="1"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type local:ZamowienieDetailViewModel}}, Path=ItemTapped}" 
                                        CommandParameter="{Binding .}" />
                                </StackLayout.GestureRecognizers>
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </StackLayout>
    </ScrollView>
</ContentPage>
