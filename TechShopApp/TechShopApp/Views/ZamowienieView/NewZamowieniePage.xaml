<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             x:Class="TechShopApp.Views.ZamowienieView.NewZamowieniePage"
             Shell.PresentationMode="ModalAnimated"
             Title="Nowa Zamówienie"
             BackgroundColor="#121212">
    <ContentPage.Resources>
        <Style TargetType="Entry">
            <Setter Property="FontSize" Value="Medium"/>
            <Setter Property="HeightRequest" Value="40"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="BackgroundColor" Value="#1E1E1E"/>
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="PlaceholderColor" Value="#BBB"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="Medium"/>
            <Setter Property="HeightRequest" Value="50"/>
            <Setter Property="CornerRadius" Value="25"/>
            <Setter Property="TextColor" Value="White"/>
        </Style>
    </ContentPage.Resources>
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Spacing="15" Padding="15">
                <Grid>
                    <Grid.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#123456" Offset="0.0" />
                            <GradientStop Color="#0F0F3F" Offset="1.0" />
                        </LinearGradientBrush>
                    </Grid.Background>
                    <Label Text="Nowa Dostawa"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="White"/>
                </Grid>
                <Label Text="Nazwa klienta" FontSize="Medium" TextColor="White" />
                <Picker ItemsSource="{Binding Klienci}" ItemDisplayBinding="{Binding Nazwisko}" SelectedItem="{Binding SelectedKlient}" FontSize="Medium" Margin="0"/>
                <Label Text="Data Zamówienia" FontSize="Medium" TextColor="White" />
                <DatePicker Date="{Binding DataZamowienia, Mode=TwoWay}" MinimumDate="{x:Static sys:DateTime.Now}" TextColor="White" />
                <Label Text="Status" FontSize="Medium" TextColor="White" />
                <Entry Text="{Binding Status, Mode=TwoWay}" />
                <Label Text="Kwota" FontSize="Medium" TextColor="White" />
                <Entry Text="{Binding Kwota, Mode=TwoWay}" />
                <Grid Padding="0,15,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Text="Anuluj" Command="{Binding CancelCommand}" BackgroundColor="#FF2E63" />
                    <Button Grid.Column="1" Text="Zapisz" Command="{Binding SaveCommand}" BackgroundColor="#00C6AE" />
                </Grid>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
